@model IEnumerable<RefRegister.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Games" asp-action="Index">
    <div>
        <label for="search" class="">Fritext: </label>
        <input id="search" class="" type="text" name="SearchString">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Sök
        </button>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MatchNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Score2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ref1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ref2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ref3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ref4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee4)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MatchNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ref1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ref2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ref3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ref4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee4)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
